{#
/**
* @file
* Default theme implementation for the guides_contents_block block.
*/
#}

{% if not localgov_base_remove_css %}
  {{ attach_library('localgov_base/guide-nav') }}
{% endif %}

{% if links %}

  {% if format == 'ordered' %}
    {% set list_type = 'ol' %}
    {% else %}
      {% set list_type = 'ul' %}
  {% endif %}
  <nav class="lgd-guide-nav mt-10 mb-14" aria-label="{{ 'Guide'|t }}">
    <{{ list_type }} class="lgd-guide-nav__list">
      {% for link in links %}
        {% if link.url.options.attributes.class == 'active' %}
          <li class="lgd-guide-nav__list-item lgd-guide-nav__list-item--active leading-6 pl-1.5 mb-3.5 border-l-4 border-black" aria-current="page">{{ link.text }}</li>
          {% else %}
            <li class="lgd-guide-nav__list-item leading-6 pl-2.5 mb-3.5"><a href="{{ link.url }}" class="text-forest underline hover:no-underline">{{ link.text }}</a></li>
        {% endif %}
      {% endfor %}
    </{{ list_type }}>
  </nav>

{% endif %}
