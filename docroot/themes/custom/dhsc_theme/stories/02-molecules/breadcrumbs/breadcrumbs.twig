{% set classes = [
  'm-breadcrumbs'
] %}
<nav{{ attributes.addClass(classes) }} aria-labelledby="system-breadcrumbs">
  <h2 id="system-breadcrumbs" class="sr-only">{{ 'Breadcrumbs'|t }}</h2>
  <ol class="m-breadcrumbs__list list-none flex text-2xs tablet:text-xs">
    {% for item in items %}
      <li class="m-breadcrumbs__item mb-2 tablet:mb-0 flex items-center">
        {% if item.url %}
          <a class="m-breadcrumbs__link order-1 tablet:order-0" href="{{ item.url }}">{{ item.text }}</a>
          <span class="m-breadcrumbs__separator mx-2 order-0 tablet:order-1 rotate-180 tablet:rotate-0">></span>
        {% else %}
          {{ item.text }}
          <span class="m-breadcrumbs__separator mx-2">></span>
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>
