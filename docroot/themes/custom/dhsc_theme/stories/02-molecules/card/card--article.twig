{#
  Template
#}

{# Classes #}
{% set classes = [
  'm-card',
  'm-card--article',
  'relative',
  'mb-4 tablet:mb-0',
] | join(' ') | trim %}

{% set attributes = attributes
  .addClass(classes)
%}

<div {{ attributes }}>
  {% if image %}
  <div class="m-card__image">
    {{ image }}
  </div>
  {% endif %}
  <div class="m-card__content">
    {% if heading %}
      <h3>
        {% if link %}
          <a href="{{ link }}" class="m-card__link">
        {% endif %}
          {{ heading }}
        {% if link %}
          </a>
        {% endif %}
      </h3>
    {% endif %}
    {% if description %}
    <p>{{ description }}</p>
    {% endif %}
    {% if date %}
    <p>{{ date }}</p>
    {% endif %}
  </div>
</div>
