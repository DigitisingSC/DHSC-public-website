{#
  Template
#}

{# Classes #}
{% set classes = [
  variant == 'default' ? 'm-back-link-default' : variant == 'form' ? 'm-back-link-form' : 'm-back-link-text',
] %}

{# Set back link #}
{% set link = link ? link : '#' %}

{% if variant == 'default' %}
<a{{attributes.addClass(classes|sort|join('')|trim)}} href="{{ link }}" title="{{ label|t }}">
    <span class="m-back-link-default__icon">{{ icon }}</span>
    <span class="m-back-link-default__label">{{ label|t }}</span>
  </a>
{% endif %}

{% if variant == 'form' %}
  <a class="{{ classes|sort|join('')|trim }}">
    <span class="m-back-link-form__icon">{{ icon }}</span>
    <input
      class="m-back-link-form__label"
      value="Back"
      formnovalidate="formnovalidate"
      data-drupal-selector="edit-actions-01-wizard-prev"
      type="submit"
      id="edit-actions-01-wizard-prev"
      name="op">
  </a>
{% endif %}

{% if variant == 'text' %}
<div class="block border-t-2 border-green mb-4"></div>
  <a{{attributes.addClass(classes|sort|join('')|trim)}} href="{{ link }}" title="{{ 'Back to: '|t }}{{ text|t }}">
    <span class="m-back-link-text__label">{{ 'Back to: '|t }}{{ text|t }}</span>
  </a>
{% endif %}
