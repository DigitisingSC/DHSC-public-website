<div class="m-branding flex justify-between items-center text-white bg-green">
  {% if site_slogan %}
    <div class="m-branding__slogan text-lg font-bold">
      {{ site_slogan }}
    </div>
  {% endif %}
  {% if site_logo %}
    <div class="m-branding__logo">
      <a href="/" rel="home">
        <img src="{{ site_logo }}" alt="{{ site_name ? site_name : 'Home'|t }}" />
      </a>
    </div>
  {% endif %}
</div>
