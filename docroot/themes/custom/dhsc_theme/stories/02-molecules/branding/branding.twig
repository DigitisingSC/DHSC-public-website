<div class="m-branding flex justify-between w-full items-center text-white bg-green">
  {% if site_logo %}
    <div class="m-branding__logo mr-4">
      <a href="/" rel="home">
        <img src="{{ site_logo }}" alt="{{ site_name ? site_name : 'Home'|t }}" />
      </a>
    </div>
  {% endif %}
  {% if site_slogan %}
    <div class="m-branding__slogan text-sm font-bold hidden tablet:block">
      {{ site_slogan }}
    </div>
  {% endif %}
</div>
