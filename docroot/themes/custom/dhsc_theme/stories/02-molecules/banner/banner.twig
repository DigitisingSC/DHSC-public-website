<section class="banner--primary">
	<div class="banner__image">
		{{ image }}
	</div>
	{% if url %}
		<a class="banner__link" href="{{ url }}">
		{% endif %}
		<div class="banner__content bg-green text-white">
			<h2 class="text-display text-bold">{{ heading }}</h2>
			<p>{{ text }}</p>
		</div>
		{% if url %}
		</a>
	{% endif %}
</section>
