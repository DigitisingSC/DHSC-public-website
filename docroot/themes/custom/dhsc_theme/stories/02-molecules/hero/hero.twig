<section class="m-hero relative mb-0">
  <div class="m-hero__container container mx-auto mb-6 flex flex-col tablet:flex-row tablet:justify-between">
    <div class="m-hero__image order-first tablet:order-last w-full tablet:w-5/12 desktop:w-4/12">
      {{ image }}
    </div>
    {% if heading or text %}
    <div class="m-hero__content tablet:w-7/12 order-last tablet:order-first z-1 -mt-[20px] tablet:mt-[80px]">
      <div class="m-hero__copy py-3 tablet:py-6 px-3 lg:px-6 bg-green-60 text-black relative">
        <h1>{{ heading }}</h1>
        <div>{{ icon }}</div>
        <div class="m-hero__text text-xs tablet:text-sm">{{ text }}</div>
      </div>
    </div>
    {% endif %}
  </div>
</section>
