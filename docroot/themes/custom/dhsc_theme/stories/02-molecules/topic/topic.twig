{# Classes #}
{% set classes = [
  'm-topic',
  'bg-green-20 p-6 rounded-md'
] | join(' ') | trim %}

{% set attributes = attributes
  .addClass(classes)
%}

<div {{ attributes }}>
  <a href="{{ link }}">
    <div class="content-wrapper">
      <h3>{{ heading }}</h3>
      <p>{{ description }}</p>
      <p class="flex justify-end"><svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M10 20C15.5228 20 20 15.5228 20 10C20 4.47715 15.5228 0 10 0C4.47715 0 0 4.47715 0 10C0 15.5228 4.47715 20 10 20Z" fill="#00A189"/><path d="M9 7L12 10L9 13" stroke="#E5EEED" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></p>
    </div>
  </a>
</div>
