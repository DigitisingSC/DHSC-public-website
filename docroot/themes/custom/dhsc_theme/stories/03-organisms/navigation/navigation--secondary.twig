{% set classes = [
  'o-navigation',
  'o-navigation--secondary',
  'bg-white text-black'
] | sort | join(' ') | trim %}

{% set attributes = attributes
  .addClass(classes)
  .addClass(variantClasses)
  .setAttribute('title', title)
%}

<section{{ attributes }}>
  <div class="container mx-auto w-full py-4">
    {{ content }}
  </div>
</section>
