{% if items %}
  <nav class="o-pager py-6" role="navigation" aria-labelledby="{{ heading_id }}">
    <h4 id="{{ heading_id }}" class="sr-only">{{ 'Pagination'|t }}</h4>
    <ul class="o-pager__items js-pager__items list-none flex flex-col">

      {% if items.previous %}
        {% set previousClasses = [
          'flex','flex-col','no-underline'
        ] %}
        <li class="o-pager__item o-pager__item--previous">
          <a
            href="{{ items.previous.href }}"
            title="{{ 'Go to previous page'|t }}"
            rel="prev"
            {{ items.previous.attributes|without('href', 'title', 'rel') }}
            class="text-forest inline-flex flex-col no-underline"
          >
            <div class="flex items-center mb-2">
              {{ iconArrowLeft }}
              <span class="sr-only">{{ 'Previous page'|t }}</span>
              <span aria-hidden="true" class="text-md font-bold">{{ items.previous.text|default('Previous'|t) }}</span>
            </div>
            {% for key, item in items.pages %}
              {% if current == key %}
                <span class="underline">{{ current }} of {{ loop.length }}</span>
              {% endif %}
            {% endfor %}
          </a>
        </li>
      {% endif %}
      {% if items.next %}
        <li class="o-pager__item o-pager__item--next">
          <a
            href="{{ items.next.href }}"
            title="{{ 'Go to next page'|t }}"
            rel="next"
            {{ items.next.attributes|without('href', 'title', 'rel') }}
            class="text-forest inline-flex flex-col no-underline"
          >
            <div class="flex items-center mb-2">
              {{ iconArrowRight }}
              <span class="sr-only">{{ 'Next page'|t }}</span>
              <span aria-hidden="true" class="text-md font-bold">{{ items.next.text|default('Next'|t) }}</span>
            </div>
            {% for key, item in items.pages %}
              {% if current == key %}
                <span class="underline">{{ current + 1 }} of {{ loop.length }}</span>
              {% endif %}
            {% endfor %}

          </a>
        </li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
