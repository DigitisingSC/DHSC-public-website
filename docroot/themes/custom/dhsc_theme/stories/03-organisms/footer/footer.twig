{% set classes = [
  'o-footer-region',
] %}
<section{{ attributes.addClass(classes) }}>
  {% if title %}
  <div class="o-footer-region__header container mx-auto w-full py-4">
    <h3>{{ title }}</h3>
  </div>
  {% endif %}
  <div class="o-footer-region__content container mx-auto w-full py-4 tablet:flex tablet:justify-between tablet:items-end">
    <div class="o-footer-region__column tablet:w-3/12 mb-4 tablet:mb-0">
      <img src="{{ logo }}" alt="">
    </div>
    <div class="o-footer-region__column tablet:w-9/12 mb-4 tablet:mb-0">
      {% if content is iterable  %}
        {% for item in content %}
          {{ item }}
        {% endfor %}
      {% else %}
        {{ content }}
      {% endif %}
    </div>
  </div>
</section>
