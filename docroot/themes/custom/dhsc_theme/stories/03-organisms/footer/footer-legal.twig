{% set classes = [
  'o-footer-region-legal',
  'mt-8 bg-black-80 text-black-20'
] %}
<section{{ attributes.addClass(classes) }}>
  {% if title %}
    <div class="o-footer-region-legal__header container mx-auto w-full py-4">
      <h3>{{ title }}</h3>
    </div>
  {% endif %}
  <div class="o-footer-region-legal__content container mx-auto w-full py-4 tablet:flex tablet:gap-4 text-xs">
    {% if content is iterable  %}
      {% for item in content %}
        {{ item }}
      {% endfor %}
    {% else %}
      {{ content }}
    {% endif %}
  </div>
</section>
