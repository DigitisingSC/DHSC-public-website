{% set classes = [
  'o-card-collection'
] %}
<section{{attributes.addClass(classes)}}>
  <div class="o-card_collection__container py-4">
    {% if title %}
      <h2 class="o-card_collection__title text-lg leading-tight font-bold mb-4">{{ title }}</h2>
    {% endif %}
    {% if items is not empty %}
      <div class="o-card_collection__listing tablet:flex tablet:gap-6">
        {% if items is iterable %}
          {% for key, item in items if key|first != '#' %}
            {{ item }}
          {% endfor %}
        {% else %}
          {{ items }}
        {% endif %}
      </div>
    {% endif %}
    {% if link %}
      <div class="o-card-collection__link mt-4">
        <a href="{{ link_url }}" class="text-forest text-base">{{ link_text }}</a>
      </div>
    {% endif %}
  </div>
</section>
