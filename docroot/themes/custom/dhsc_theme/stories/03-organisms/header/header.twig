{% set classes = [
  'o-header',
  'bg-green text-white'
] %}
<header{{ attributes.addClass(classes) }}>
  <div class="container mx-auto w-full py-4 flex justify-between gap-4">
    {% if content is iterable  %}
      {% for item in content %}
        {{ item }}
      {% endfor %}
    {% else %}
      {{ content }}
    {% endif %}
  </div>
</header>
