

{% set icon %}
  {% include '@atoms/svg/svg.twig' with {
    'sprite': spriteSrc,
    'icon': 'chevron-left',
  } %}
{% endset %}

{% include '@molecules/back-link/back-link.twig' with {
  label: 'Back',
  icon: icon,
} %}

{% if result_variant %}
  {% set variant = {
    '#type':   'processed_text',
    '#text':    result_variant.value,
    '#format': 'full_html',
  } %}
{% endif %}

{% set back_link %}
  {% include '@molecules/back-link/back-link.twig' with {
    'attributes': attributes,
    'text' : 'Home',
    'link' : '/',
    'variant' : 'text',
  } %}
{% endset %}

{% include '@organisms/tool/tool--assessment.twig' with {
  'attributes': attributes,
  'summary': summary,
  'title': title,
  'variant': variant,
  'no_result': no_result,
  'result': result,
  'submission_url': submission_url,
  'email_form': email_form,
  'back_link': back_link
} %}
